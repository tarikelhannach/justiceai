# Production Environment Configuration for Morocco
# Sistema Judicial Digital - Marruecos

# Basic Configuration
ENVIRONMENT=production
DEBUG=false
APP_NAME=Sistema Judicial Digital - Marruecos
APP_VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://justicia:your-db-password@postgres:5432/justicia_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password
ELASTICSEARCH_VERIFY_CERTS=true

# CORS
ALLOWED_ORIGINS=https://justicia.ma,https://www.justicia.ma,https://api.justicia.ma
ALLOWED_HOSTS=justicia.ma,www.justicia.ma,api.justicia.ma

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Morocco Specific
MOROCCO_TIMEZONE=Africa/Casablanca
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,fr,es

# OCR
OCR_LANGUAGES=ara+fra+spa
OCR_ENGINE=tesseract
OCR_PSM=6
OCR_OEM=3

# HSM Configuration
HSM_TYPE=software_fallback
# For PKCS#11 HSM:
# HSM_TYPE=pkcs11
# HSM_PKCS11_LIBRARY=/usr/lib/pkcs11/libsofthsm2.so
# HSM_SLOT_ID=0
# HSM_PIN=1234

# For Azure Key Vault:
# HSM_TYPE=azure_keyvault
# HSM_AZURE_VAULT_URL=https://justicia-hsm.vault.azure.net/
# HSM_AZURE_CLIENT_ID=your-client-id
# HSM_AZURE_CLIENT_SECRET=your-client-secret
# HSM_AZURE_TENANT_ID=your-tenant-id

# File Storage
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,tiff

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Africa/Casablanca

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/justicia.log

# Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=2555

# Email Notifications
SMTP_HOST=smtp.justicia.ma
SMTP_PORT=587
SMTP_USER=noreply@justicia.ma
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true
SMTP_SSL=false

# SMS Notifications
SMS_PROVIDER=twilio
SMS_API_KEY=your-twilio-api-key
SMS_API_SECRET=your-twilio-api-secret
SMS_FROM_NUMBER=+212600000000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=justicia-backups
BACKUP_S3_REGION=eu-west-3

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_YEARS=7
ENCRYPTION_AT_REST=true
ENCRYPTION_KEY=your-encryption-key-32-characters

# Passwords (Change these in production!)
DB_PASSWORD=your-secure-database-password
ELASTIC_PASSWORD=your-secure-elastic-password
GRAFANA_PASSWORD=your-secure-grafana-password
